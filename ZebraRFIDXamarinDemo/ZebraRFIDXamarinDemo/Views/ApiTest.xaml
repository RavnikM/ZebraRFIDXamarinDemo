<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZebraRFIDXamarinDemo.Views.ApiTest">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Hello A" 
                HorizontalOptions="CenterAndExpand" />


            <Entry Text="GET Method" HorizontalTextAlignment="Start" Placeholder="Api endpoint..."/>
            <Button Text="Send" Clicked="on_get_clicked" HorizontalOptions="Fill"/>
            <Label x:Name="label_get" Text="API result" HorizontalOptions="Fill" VerticalOptions="FillAndExpand"/>


            <Entry Text="Post Method" HorizontalTextAlignment="Start" Placeholder="Api endpoint..."/>
            <Button Text="Send" Clicked="on_post_clicked" HorizontalOptions="Fill"/>
            <Label x:Name="label_set" Text="API result" HorizontalOptions="Fill" VerticalOptions="FillAndExpand"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>