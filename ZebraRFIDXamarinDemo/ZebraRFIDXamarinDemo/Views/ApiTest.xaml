<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZebraRFIDXamarinDemo.Views.ApiTest">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Hello A" 
                HorizontalOptions="CenterAndExpand" />


            <Entry x:Name="entry_get" Text="{Binding Request}" HorizontalTextAlignment="Start" Placeholder="http://api.open-notify.org/iss-now.json?callback=?"/>
            <Button Text="Send" Clicked="on_get_clicked" HorizontalOptions="Fill"/>
            <Label x:Name="label_get" Text="{Binding Response}" HorizontalOptions="Fill" VerticalOptions="FillAndExpand"/>


            <Entry x:Name="entry_post" Text="{Binding PostRequest}" HorizontalTextAlignment="Start" Placeholder="Api endpoint..."/>
            <Button Text="Send" Clicked="on_post_clicked" HorizontalOptions="Fill"/>
            <Label x:Name="label_post" Text="{Binding PostResponse}" HorizontalOptions="Fill" VerticalOptions="FillAndExpand"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>